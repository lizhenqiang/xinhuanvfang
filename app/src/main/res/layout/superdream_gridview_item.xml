<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:id="@+id/chaojimengxiang_paraent"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <com.bigdata.xinhuanufang.custom.yuanjiaoImage
        android:id="@+id/iv_sdgi_dreamPhoto"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_sdgi_dreamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_sdgi_dreamPhoto"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="中意全网对抗赛84公斤级"
        android:textColor="#333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="揭晓进度:" />

                <TextView
                    android:id="@+id/super_dream_progress_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百分比"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/main_red" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/superdream_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:progress="0"
                android:progressDrawable="@drawable/barcolor"
                android:secondaryProgress="0" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_dream"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_agrd_youdianzan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_red_stroke"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="加入梦想"
            android:textColor="@color/main_red"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>