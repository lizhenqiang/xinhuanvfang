<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_title_title" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_reviewD_fighterPhotoOne"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_reviewD_fighterPhotoOne"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:text="费朗西丝-吉诺维斯"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/remind_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="胜"
                android:textColor="@color/main_red"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:src="@drawable/vs_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_reviewD_fighterPhotoTwo"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_reviewD_fighterPhotoTwo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:text="青格乐"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">


        <ProgressBar
            android:id="@+id/iv_agrd_red"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:max="10000"
            android:paddingLeft="5dp"
            android:progress="0"
            android:progressDrawable="@drawable/barcolor"
            android:secondaryProgress="0" />

        <ProgressBar
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView2"
            android:layout_toRightOf="@+id/iv_agrd_red"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="3dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:max="10000"
            android:paddingLeft="5dp"
            android:progress="0"
            android:progressDrawable="@drawable/barcolors"
            android:secondaryProgress="0" />

        <ImageView
            android:id="@+id/iv_agrd_zuodianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_agrd_red"
            android:layout_marginTop="5dp"
            android:src="@drawable/zuodianzan_0" />

        <TextView
            android:id="@+id/tv_agrd_zuodianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_agrd_zuodianzan"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_agrd_zuodianzan"
            android:text="134"
            android:textColor="@color/split_line"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_agrd_youdianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignTop="@+id/iv_agrd_zuodianzan"
            android:src="@drawable/youdianzan_0" />

        <TextView
            android:id="@+id/tv_agrd_youdianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignBottom="@+id/iv_agrd_youdianzan"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_agrd_youdianzan"
            android:text="136"
            android:textColor="@color/split_line"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_agrd_success"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_agrd_youdianzan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_red_stroke"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="竞猜失败"
            android:textColor="@color/main_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_agrd_choujiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_agrd_success"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="砸金蛋"
            android:textColor="@color/main_red"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/xiangyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_agrd_success"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_agrd_choujiang"
            android:src="@drawable/qudianji_1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gameIntroduce"
            android:textColor="@color/main_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/game_jincai_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="none"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="300"
            android:singleLine="false"
            android:text="@string/gameIntroduceDetails"
            android:textColor="@color/split_line"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/with_splitLine" />

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="距离开播还有1小时30分"
        android:textColor="@color/main_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/game_delete_jincai"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/sjk"
            android:text="关注比赛"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/jingcaijieguo_shuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(关注本场比赛,直播开始可以实时查看比赛结果)"
            android:textColor="@color/split_line"
            android:textSize="12sp" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line" />
    <LinearLayout
        android:id="@+id/game_send_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/te_reviewD_discuss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@null"
            android:hint="@string/discuss"
            android:textColor="@color/remind_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_reviewD_send"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.2"
            android:background="@color/second_text"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
        <View
            android:id="@+id/jingcaijieguo_fengexian"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line" />
        <TextView
            android:id="@+id/jingcaijieguo_liuyanban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/messageBoard"
            android:textColor="@color/main_text"
            android:textSize="12sp" />
        <com.bigdata.xinhuanufang.utils.ListViewForScrollView
            android:id="@+id/lv_reviewD_messageBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.bigdata.xinhuanufang.utils.ListViewForScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/board_message_jiayoujingcai_iserror"
            ></TextView>
    </LinearLayout>
</ScrollView>
</LinearLayout>