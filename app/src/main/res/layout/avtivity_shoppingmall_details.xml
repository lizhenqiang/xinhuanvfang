<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/item_title_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/dizhi_bj"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:text="收货人："
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shoping_address_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shoping_address_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/Adress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shoping_address_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/shoppingmall_details_shopping_bianhao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="订单编号:" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/with_splitLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <com.bigdata.xinhuanufang.custom.yuanjiaoImage
            android:id="@+id/shoppingmall_details_shopping_pic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/shoppingmall_details_shopping_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="苹果七" />

            <TextView
                android:id="@+id/shoppingmall_details_shopping_attrs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:text="颜色属性" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" >

                <TextView
                    android:id="@+id/shoppingmall_details_shopping_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥561.00" />

                <TextView
                    android:id="@+id/shoppingmall_details_shopping_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="40dp"
                    android:text="×1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/with_splitLine" />

    <TextView
        android:id="@+id/shoppingmall_details_shopping_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="实付款金额:46512" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/with_splitLine" />

    <Button
        android:id="@+id/shoppingmall_details_shopping_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_red"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="联系卖家" />

</LinearLayout>