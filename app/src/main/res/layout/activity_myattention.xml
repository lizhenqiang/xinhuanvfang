<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/item_title_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_ama_game"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@null"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/game"
                android:textColor="@color/second_text"
                android:textSize="12sp" />

            <View
                android:id="@+id/my_guanzhu_bisai"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#FF0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_ama_fighter"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@null"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/fighter"
                android:textColor="@color/second_text"
                android:textSize="12sp" />

            <View
                android:id="@+id/my_guanzhu_xuanshou"
                android:layout_width="60dp"
                android:visibility="gone"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#FF0000" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_ama_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>