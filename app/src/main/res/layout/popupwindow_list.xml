<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/joinshoping_attr_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机身" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/joinshopingcar_color1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="#06000000"
                android:layout_marginLeft="8dp"
                android:text="黑"
                android:padding="4dp"
                android:textColor="#000000"
                android:textSize="10dp" />
            
             <Button
                android:id="@+id/joinshopingcar_color2"
                  android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="#06000000"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:text="金"
                android:textSize="10dp" />
              <Button
                android:id="@+id/joinshopingcar_color3"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="#06000000"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:text="金"
                android:textSize="10dp" />
               <Button
                android:id="@+id/joinshopingcar_color4"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="#06000000"
                android:textColor="#000000"
                android:text="灰"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/split_line" />

</LinearLayout>
