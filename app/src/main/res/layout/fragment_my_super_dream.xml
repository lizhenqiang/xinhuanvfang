<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/my_super_dream_daishixian_listview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8" >
    </ListView>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/mine_superdream_daishixian_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="选中1件商品, 合计:561¥" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="2dp"
        android:layout_weight="1" >

        <CheckBox
            android:id="@+id/mine_superdream_daishixian_quanxuan"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="全选" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mine_superdream_daishixian_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/split_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除清单" />

        <TextView
            android:id="@+id/mine_superdream_daishixian_commit"
            android:layout_width="wrap_content"
             android:paddingRight="20dp"
             android:gravity="center"
             android:background="@color/main_red"
              android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:text="提交" />
    </LinearLayout>

</LinearLayout>