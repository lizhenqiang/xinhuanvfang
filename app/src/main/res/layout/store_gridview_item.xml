<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_sgi_goodsPhoto"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_sgi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="首届我是拳王总决赛冠军签名拳套"
        android:textColor="#333333"
        android:textSize="10sp" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
        android:id="@+id/tv_sgi_hunmanNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="￥300.00"
        android:textColor="@color/main_red"
        android:textSize="14sp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_sgi_hunmanNum"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="@string/goldenGlove"
            android:textSize="8sp"
            android:textColor="@color/remind_color"/>
    </RelativeLayout>

    

</LinearLayout>