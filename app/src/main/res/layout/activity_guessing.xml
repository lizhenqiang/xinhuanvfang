<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/item_title_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_gus_gameGuessing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="@string/gameGuessing"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View android:id="@+id/v_gus_gameTab"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/main_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_gus_guessingResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="@string/guessingResult"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View android:id="@+id/v_gus_guessingTab"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/main_red" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/guessing_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" >
    </FrameLayout>

</LinearLayout>